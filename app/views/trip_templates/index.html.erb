<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All trips
    </h1>

    <a href="/trips/new" class="btn btn-block btn-outline-secondary">
      Add a new trip
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "trip_templates/trips_search_form" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "trip_templates/all_photos_map" %>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Country name
        </th>

        <th>
          Image
        </th>

        <th>
          Owner
        </th>

        <th>
          City visited
        </th>

        <th>
          Rating
        </th>

        <th>
          Must do
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @trips.each do |trip| %>
      <tr>
        <td>
          <%= trip.id %>
        </td>

        <td>
          <%= trip.country_name %>
        </td>

        <td>
          <img src='<%= trip.image %>' class='img-fluid'>
        </td>

        <td>
          <% if trip.owner.present? %>
            <a href="/users/<%= trip.owner.id %>">
              <%= trip.owner.username %>
            </a>
          <% end %>
        </td>

        <td>
          <%= trip.city_visited %>
        </td>

        <td>
          <%= trip.rating %>
        </td>

        <td>
          <%= trip.must_do %>
        </td>

        <td>
          <%= time_ago_in_words(trip.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(trip.updated_at) %> ago
        </td>

        <td>
          <a href="/trips/<%= trip.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @trips, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
